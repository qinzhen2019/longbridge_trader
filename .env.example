# ============================================================
# Longbridge OpenAPI 凭证 (必填)
# 从 https://open.longportapp.com 获取
# ============================================================
LONGPORT_APP_KEY=your_app_key_here
LONGPORT_APP_SECRET=your_app_secret_here
LONGPORT_ACCESS_TOKEN=your_access_token_here

# API 区域: cn (大陆) / hk (香港)
LONGPORT_REGION=hk

# ============================================================
# 交易配置
# ============================================================

# 模拟盘开关: true = 模拟盘 (不下真单), false = 实盘
PAPER_TRADING=true

# ============================================================
# 关注清单配置 (动态获取用户关注清单)
# ============================================================

# 是否使用长桥关注清单: true = 从关注清单动态获取, false = 使用下方 WATCH_SYMBOLS
USE_WATCHLIST=true

# 市场过滤: US (美股), HK (港股), CN (A股), ALL (全部), 或组合如 US,HK
WATCHLIST_MARKET_FILTER=US

# 关注清单刷新间隔 (秒) - 定期检查关注清单变化
WATCHLIST_REFRESH_INTERVAL=300

# ============================================================
# 静态监控标的 (仅当 USE_WATCHLIST=false 时生效)
# ============================================================

# 监控标的 (逗号分隔)
WATCH_SYMBOLS=700.HK,TSLA.US

# 每笔交易数量 (股)
ORDER_QUANTITY=100

# ============================================================
# 策略参数
# ============================================================

# 布林带参数
BOLL_PERIOD=20
BOLL_STD_DEV=2.0

# RSI 参数
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# ============================================================
# 风控参数
# ============================================================

# 单笔硬止损 (百分比)
STOP_LOSS_PCT=1.5

# 止盈 (百分比)
TAKE_PROFIT_PCT=1.5

# 当日最大回撤 (百分比)
MAX_DRAWDOWN_PCT=3.0

# 同一标的交易冷却时间 (秒)
TRADE_COOLDOWN_SECONDS=600

# K线轮询间隔 (秒) - 用于拉取最新K线
KLINE_POLL_INTERVAL=10
